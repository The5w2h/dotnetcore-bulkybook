@page
@model AbbyWeb.Pages.Categories.IndexModel


@if (TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success(@TempData["success"]);
    </script>
    
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <a asp-page="Create" class="btn btn-primary col-6">
            Create new category
        </a>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th style="height:auto">

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="30%">@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2" style="height:auto">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2" style="height:auto">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
