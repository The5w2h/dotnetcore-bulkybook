@page
@model AbbyWeb.Pages.Categories.DeleteModel


<form method="post">
    <div hidden asp-for="Category.Id"></div> <!--This id is required for POST method-->
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" disabled class="form-control"/>
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger" style="width:auto">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:auto">Back to List</a>
    </div>
</form>

@*Partial Views -To insert partial views, create a section. A section, has Scripts { with PARTIAL tag helper}, which contains the code*@

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" /> // This partial view does client side validations.
                                                     // By default .NET CORE does not display custom validations from Client Side
    }

}